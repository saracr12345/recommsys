{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/dist/*"]
    }
  },
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts",
      "tests/**/*.ts"
    ] 
}
